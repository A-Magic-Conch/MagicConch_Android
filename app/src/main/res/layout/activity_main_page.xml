<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testt"
    tools:context=".MainPage"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/socialicons"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtn1"
            android:layout_width="48dp"
            android:layout_height="92dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#B3000000"
            android:backgroundTint="#95F4F7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/closet_img" />

        <ImageButton
            android:id="@+id/imgBtn2"
            android:layout_width="48dp"
            android:layout_height="92dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#B3000000"
            android:backgroundTint="#95F4F7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food_img" />

        <ImageButton
            android:id="@+id/imgBtn3"
            android:layout_width="48dp"
            android:layout_height="92dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#B3000000"
            android:backgroundTint="#95F4F7"
            android:longClickable="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/activity_img" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btngrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_weight="1"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/btnimg1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/btnimg2" />

    </LinearLayout>


</LinearLayout>