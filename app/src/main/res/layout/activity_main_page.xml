<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testt"
    tools:context=".MainPage"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/socialicons"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false"
        android:gravity="center|bottom"
        android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clothBtn"
        android:text="ì˜·"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />


        <ImageButton
            android:id="@+id/imgBtn1"
            android:layout_width="48dp"
            android:layout_height="92dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#B3000000"
            android:backgroundTint="#95F4F7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/closet_img" />

        <ImageButton
            android:id="@+id/imgBtn2"
            android:layout_width="48dp"
            android:layout_height="92dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#B3000000"
            android:backgroundTint="#95F4F7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/food_img" />

        <ImageButton
            android:id="@+id/imgBtn3"
            android:layout_width="48dp"
            android:layout_height="92dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#B3000000"
            android:backgroundTint="#95F4F7"
            android:longClickable="false"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/activity_img" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="170dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/bnimg" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btngrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_weight="1"
        android:gravity="bottom">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/btnimg1" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/btnimg2" />

    </LinearLayout>


</LinearLayout>